@using DansTesComs.Ressources.User
@model User

@{
    ViewBag.Title = UserRessources.Edit;
}

<h1>@UserRessources.Edit</h1>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h3>Informations personnelles</h3>
    if (IsPost)
    {
        <p class="alert ">@ViewBag.IsEnregistrer</p>
    }

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})

        <div class="form-group">
            @Html.LabelFor(model => model.Mail, htmlAttributes: new {@class = "control-label col-md-3"})
            <div class="col-md-6">
                @Html.EditorFor(model => model.Mail, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Mail, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new {@class = "control-label col-md-3"})
            <div class="col-md-6">
                @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Firstname, htmlAttributes: new {@class = "control-label col-md-3"})
            <div class="col-md-6">
                @Html.EditorFor(model => model.Firstname, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Firstname, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-6">
                <input type="submit" value="Save" class="btn  " />
            </div>
        </div>
    </div>
}

<div class="row">
    <div class ="col-md-1 col-md-offset-1">
        <img height="65" width="65" style="margin-bottom: 15px;" src="@Model.GetGravatarLink(65)" />
    </div>
        <p class ="col-md-8">@Html.Raw(UserRessources.TexteGravatar) <a href="https://en.gravatar.com/">@UserRessources.Ici</a>.</p>
</div>


<!DOCTYPE html>
<html lang="fr">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>Mes Garanties - @ViewBag.Title</title>
    <meta name="description" content="@ViewBag.description" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jqueryval")

    @RenderSection("scripts", false)
    @Scripts.Render("~/bundles/ajaxJsResponse")
    <script type="text/javascript">
        $(function() {
            $("#FinDeGarantie").datepicker({dateFormat: "dd/mm/yy"});
        })
    </script>
</head>
<body>
    <header class="navbar navbar-default navbar-static-top">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4">
                    <p>
                        <a href="@{
                                     if (WebSecurity.IsAuthenticated)
                                     {
                                         @Url.Action("Index", "Garanties")
                                     }
                                     else
                                     {
                                         @Url.Action("Index", "Home")
                                     }
                                 }" class="logo"><img height="70" width="300" src="~/Images/logo.png" alt="" /></a>
                    </p>
                </div>
                <div class="col-md-5">
                    @if (WebSecurity.IsAuthenticated)
                    {
                        <form class="form-inline menu-search" method="GET" action="@Url.Action("Search","Garanties")">
                            <div class="form-group">

                                <input type="text" name="search" class="form-control" value="@ViewBag.Search" placeholder="Chercher une garantie">
                            </div>
                            <button type="submit" class="btn btn-success">Rechercher</button>
                        </form>
                    }
                </div>
                <div class="col-md-3">
                    <section class="row" id="login">
                        <div>
                            @Html.Partial("_LoginPartial")
                        </div>
                    </section>
                </div>

            </div>
        </div>
    </header>
    <div id="body">
        <section class="container ">
            <div class="backgroundWhite row">
                @RenderBody()
            </div>


        </section>
    </div>
    <footer>
        <div class="container">
            <div class="text-center">
                <p>
                    &copy; @DateTime.Now.Year - ZIENTEK Lucas <span class="separator">|</span>
                    @Html.ActionLink(GeneralRessources.Accueil, "Index", "Home") <span class="separator">|</span>
                    @Html.ActionLink(GeneralRessources.About, "About", "Home") <span class="separator">|</span>
                    @Html.ActionLink(GeneralRessources.Contact, "Contact", "Home")
                </p>
            </div>
        </div>
    </footer>

</body>
</html>